
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd"
	xmlns:jb="http://www.milyn.org/xsd/smooks/javabean-1.3.xsd"
	xmlns:camel="http://www.milyn.org/xsd/smooks/camel-1.4.xsd"
	xmlns:core="http://www.milyn.org/xsd/smooks/smooks-core-1.4.xsd">

	<core:filterSettings defaultSerialization="false"/>


    <jb:bean beanId="records" class="java.util.ArrayList" createOnElement="#document">
        <jb:wiring beanIdRef="record" />
    </jb:bean>


    <!-- Student mapping -->

	<jb:bean beanId="record" class="org.sli.ingestion.NeutralRecord"
		createOnElement="InterchangeStudent/Student">
		
        <!-- jb:value property="sourceId" data="" /-->
        <!-- jb:value property="jobId" data="" /-->
		<jb:expression property="recordType">'Student'</jb:expression>
		<jb:value property="localId" data="StudentUniqueStateId" />
		<jb:wiring property="attributes" beanIdRef="studentAttributes" />
	</jb:bean>
	
	<jb:bean beanId="studentAttributes" class="java.util.HashMap" 
	    createOnElement="InterchangeStudent/Student">
	    
	    <!-- Testing Only -->
        <jb:value property="studentId" data="StudentId" /> 
        
        <jb:value property="firstName" data="Name/FirstName" />
        <jb:value property="middleName" data="Name/MiddleName" />
        <jb:value property="lastSurname" data="Name/LastSurname" />
        <jb:value property="birthDate" data="BirthData/BirthDate" />
        <jb:value property="sex" data="Sex" /> 
    </jb:bean>


    <!-- School mapping -->
    
	<jb:bean beanId="record" class="org.sli.ingestion.NeutralRecord"
		createOnElement="InterchangeEducationOrganization/School">
		
        <!-- jb:value property="sourceId" data="" /-->
        <!-- jb:value property="jobId" data="" /-->
        <jb:expression property="recordType">'School'</jb:expression>
        <jb:value property="localId" data="StateOrganizationId" />
        <jb:wiring property="attributes" beanIdRef="schoolAttributes" />
	</jb:bean>

	<jb:bean beanId="schoolAttributes" class="java.util.HashMap" 
	    createOnElement="InterchangeEducationOrganization/School">
	    
	    <!-- Testing Only -->
        <jb:value property="schoolId" data="SchoolId" /> 
        
		<jb:value property="fullName" data="NameOfInstitution" />
    </jb:bean>


    <!-- Student School Association mapping -->
    
	<jb:bean beanId="record" class="org.sli.ingestion.NeutralRecord"
		createOnElement="InterchangeStudentEnrollment/StudentSchoolAssociation">
		
        <!-- jb:value property="sourceId" data="" /-->
        <!-- jb:value property="jobId" data="" /-->
        <jb:expression property="recordType">'StudentSchoolAssociation'</jb:expression>
        
         
        <jb:wiring property="attributes" beanIdRef="studentSchoolAssociationAttributes" />
        <jb:wiring property="localParentIds" beanIdRef="studentSchoolAssociationParentIds" />
        
	</jb:bean>

    <jb:bean beanId="studentSchoolAssociationParentIds" class="java.util.HashMap"
		createOnElement="InterchangeStudentEnrollment/StudentSchoolAssociation">

        <jb:value property="Student" data="StudentReference/StudentIdentity/StudentUniqueStateId" />
        <jb:value property="School" data="SchoolReference/EducationalOrgIdentity/StateOrganizationId" />
    </jb:bean>

	<jb:bean beanId="studentSchoolAssociationAttributes" class="java.util.HashMap" 
	    createOnElement="InterchangeStudentEnrollment/StudentSchoolAssociation">
	    
        <jb:value property="entryDate" decoder="Calendar" data="EntryDate">
            <jb:decodeParam name="format">yyyy-MM-dd</jb:decodeParam>
        </jb:value>
        <jb:value property="entryGradeLevel" data="EntryGradeLevel" decoder="Enum">
            <jb:decodeParam name="enumType">org.slc.sli.domain.enums.GradeLevelType</jb:decodeParam>
            <jb:decodeParam name="Infant/toddler">INFANT_TODDLER</jb:decodeParam>
            <jb:decodeParam name="Early Education">EARLY_EDUCATION</jb:decodeParam>
            <jb:decodeParam name="Preschool/Prekindergarten">PRESCHOOL_PREKINDERGARTEN</jb:decodeParam>
            <jb:decodeParam name="Kindergarten">KINDERGARTEN</jb:decodeParam>
            <jb:decodeParam name="Transitional Kindergarten">TRANSITIONAL_KINDERGARTEN</jb:decodeParam>
            <jb:decodeParam name="First grade">FIRST_GRADE</jb:decodeParam>
            <jb:decodeParam name="Second grade">SECOND_GRADE</jb:decodeParam>
            <jb:decodeParam name="Third grade">THIRD_GRADE</jb:decodeParam>
            <jb:decodeParam name="Fourth grade">FOURTH_GRADE</jb:decodeParam>
            <jb:decodeParam name="Fifth grade">FIFTH_GRADE</jb:decodeParam>
            <jb:decodeParam name="Sixth grade">SIXTH_GRADE</jb:decodeParam>
            <jb:decodeParam name="Seventh grade">SEVENTH_GRADE</jb:decodeParam>
            <jb:decodeParam name="Eighth grade">EIGHTH_GRADE</jb:decodeParam>
            <jb:decodeParam name="Ninth grade">NINTH_GRADE</jb:decodeParam>
            <jb:decodeParam name="Tenth grade">TENTH_GRADE</jb:decodeParam>
            <jb:decodeParam name="Eleventh grade">ELEVENTH_GRADE</jb:decodeParam>
            <jb:decodeParam name="Twelfth grade">TWELFTH_GRADE</jb:decodeParam>
            <jb:decodeParam name="Grade 13">GRADE_13</jb:decodeParam>
            <jb:decodeParam name="Postsecondary">POSTSECONDARY</jb:decodeParam>
            <jb:decodeParam name="Adult Education">ADULT_EDUCATION</jb:decodeParam>
            <jb:decodeParam name="Ungraded">UNGRADED</jb:decodeParam>
            <jb:decodeParam name="Other">OTHER</jb:decodeParam>
        </jb:value>
    </jb:bean>


</smooks-resource-list>