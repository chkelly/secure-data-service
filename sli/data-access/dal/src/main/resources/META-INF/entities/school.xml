	<entity class="org.slc.sli.domain.School">
		<table name="school" />
		
		<attributes>
			<id name="schoolId">
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="fullName"/>
			<basic name="shortName"/>
			<basic name="stateOrganizationId"/>
			<basic name="webSite"/>
			<basic name="schoolType" >
			<enumerated>STRING</enumerated>
			</basic>
			<basic name="charterStatus">
			<enumerated>STRING</enumerated>
			</basic>
			<basic name="titleIPartASchoolDesignation">
				<column name="title_i_part_a_school_designation"/>
				<enumerated>STRING</enumerated>
			</basic>
			<basic name="magnetSpecialProgramEmphasisSchool">
			<enumerated>STRING</enumerated>
			</basic>
			<basic name="administrativeFundingControl">
			<enumerated>STRING</enumerated>
			</basic>
			<basic name="operationalStatus">
			<enumerated>STRING</enumerated>
			</basic>
		</attributes>
	</entity>


